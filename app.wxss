.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.title_area{
  position: absolute;
  border-radius: 15px;
  background-color: #29BE98
}

.title_text{
  text-align: center;
  color: #ffffff;
  font-size: 42rpx;
}


.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 