/* pages/eatingplan/eatingplan.wxss */

.title_text{
    text-align: center;
    color: #ffffff;
    font-size: 42rpx;
    padding: 5px;
}

.area_title{
    margin: 20px;
    color: #555e87;
    font-size: 30rpx;
}

.area_weight_text{
    color: #555e87;
    font-size: 28rpx;
}

.area_weight{
    margin-left: 20px;
    color: #555e87;
    font-size: 28rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start; /*从左边开始向右排*/
}

.area_weight_input{
    display: flex;
    flex-flow: column wrap; /*纵向排列*/
}

.area_height_cm{
    width: 20px; 
    margin-right: 30px;
    margin-left: 5px;
    margin-top: 20px;
    color: #8c8fa1
}

.area_weight_kg{
    width: 20px;
    margin-left: 5px; 
    margin-top: 20px;
    color: #8c8fa1
}

.input_border{
    border: 1px solid #D1D2E7;
    text-align: center;
    font-size: 30rpx;
    color: #8c8fa1
}

.area_time{
    margin-left: 20px;
    margin-top: 20px;
    color: #555e87;
    font-size: 28rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start; /*从左边开始向右排*/
}

.area_desc_text{
    margin-top: 60px;
    margin-left: 20px;
    margin-right: 10px;
    display: flex;
    /* flex-flow: row wrap;
    justify-content: flex-start;  */
}

.area_desc_text_2{
    margin-top: 10px; 
    margin-left: 20px;
    margin-right: 10px;
    display: flex;
}

.area_desc_text_input{
    padding-right: 10px;
}

.input_desc_text_border{
    background-color: yellowgreen;
    border: 1px solid #D1D2E7;
    text-align: center;
    color: #676f7c;
    font-size: 30rpx;
}