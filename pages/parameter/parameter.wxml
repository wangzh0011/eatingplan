<view>
	<image src="../images/ty11.png" class="background-img" >
		<view class="background-block" />
	</image>
	<view class="title_area" style="width: {{title_area_width}}px; left: {{title_area_left}}px; top: {{title_area_top}}px">
		<view class="title_text" >设置检测参数</view>
	</view>

	<view
	class="area"
	hover-class="none"
	hover-stop-propagation="false"
	style="left: {{50/2}}px; height: {{windowHeight/1.5}}px; width: {{windowWidth-50}}px; top:{{windowHeight/7.7}}px">

        <view class="area_title">请填写真实参数以获取真情报告</view>

        <view class="area_sex_text">选择您的性别：</view>
        <view class="area_sex">
			<radio-group class="group" bindchange="chooseSex">
				<view class="attr_value_man">
					<label class="radio_label">
						<radio value="man"> <text style="color: #ffffff">男</text></radio>
					</label>
				</view>
				<view class="attr_value_woman">
					<label class="radio_label">
						<radio value="woman"> <text style="color: #ffffff">女</text></radio>
					</label>
				</view>
			</radio-group>
        </view>
        
        <view class="area_age">
            <view class="area_age_text">出生年月：</view>
			<picker class="area_age_input" style="width: {{windowWidth-50-40}}px" mode="date" start="{{startDate}}" end="{{endDate}}" bindchange="bindDateChange">
                <input value="{{birth}}" disabled="{{true}}"/>
            </picker>
        </view>

        <view class="area_hw_text">身高/体重：</view>
        <view class="area_height">
            <picker class="area_height_input" style="width: {{(windowWidth-50-40)/2-30}}px" mode="selector" bindchange="heightTap" range="{{heightArray}}">
				<input disabled="{{true}}" value="{{heightArray[index_height]}}"/>
			</picker>
			<view class="area_height_cm">cm</view>
            <picker class="area_weight_input" style="width: {{(windowWidth-50-40)/2-50}}px" mode="selector" bindchange="weightTap" range="{{weightArray}}">
				<input value="{{weightArray[index_weight]}}" disabled="{{true}}"/>
			</picker>
			<view class="area_weight_kg">kg</view>
        </view>

		<view class="area_age"><!-- 与age样式一致，所以复用其样式-->
            <view class="area_age_text">平均睡眠时长：</view>
            <picker class="area_age_input" style="width: {{windowWidth-50-40}}px" mode="selector" bindchange="sleepTap" range="{{sleepArray}}">
                <input value="{{sleepArray[index_sleep]}}" disabled="{{true}}"/>
            </picker>
        </view>

	</view>

	<view  class="btn_style" >
		<image src="../images/ty2.png" style="position: absolute; left:{{(windowWidth-btn_width)/2}}px; width:{{btn_width}}px; height:{{btn_height}}px;">
		</image>
	</view>
	<view class="btn" bindtap="onTap" style="width:{{btn_width}}px; left:{{(windowWidth-btn_width)/2}}px;">
		开始云计算
	</view>

</view>

