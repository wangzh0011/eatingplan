<!--pages/plandetails/plandetails.wxml-->
<view>
	<image class="background-img" src="../images/ty11.png" />
	<view class="title_area" style="width: {{title_area_width}}px; left: {{title_area_left}}px; top: {{title_area_top}}px">
		<view class="title_text" >{{username}}的健康饮食计划</view>
	</view>

    <view class="plandata" style="width: {{windowWidth-50}}px; left: 25px; top: {{windowHeight/10}}px">
    
        <view class="move-container">
            <ec-canvas id="mychart-dom-move-bar" canvas-id="mychart-move-bar" ec="{{ ecBar }}"></ec-canvas>
        </view>

        <view class="weui-tab">

            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title" style="color: #ffffff;font-size: 32rpx">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);" />
            </view>
            
            <view class="weui-tab__panel">

                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <view class="food">
                        <view class="title">
                            早餐摄入热量{{breakfast}}焦耳
                        </view>
                        <view class="subtitle">
                            选择其一作为早餐
						</view>
						
							<view class="details">
								<scroll-view class="scroll-view" style="height:{{windowHeight/3}}px;" scroll-x="false" scroll-y="true" upper-threshold="50" lower-threshold="50" 
									scroll-top="0" scroll-left="0" scroll-into-view="" scroll-with-animation="false" enable-back-to-top="false" 
									bindscrolltoupper="" bindscrolltolower="" bindscroll="">
									<view wx:for="{{itemslist}}" wx:key="*this">
										<view class="item">
											<image src="../images/6-5.png" class="pic" style="width: {{windowHeight/12}}px; height: {{windowHeight/12}}px" />
											<view class="desc" style="width: {{(windowWidth-50)-(windowHeight/12)-5}}px; height: {{windowHeight/12}}px">
												<view class="desc_title">一小碗白米饭</view>
												<view class="desc_subtitle">热量： 336大卡 150克</view>
											</view>
										</view>
									</view>
								</scroll-view>
							</view>

                    </view>
                </view>

                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                    <view class="food">
                        <view class="title">
                            午餐摄入热量{{lunch}}焦耳
                        </view>
                        <view class="subtitle">
                            选择其一作为午餐
                        </view>
                        <view class="details">
                            <view class="item">
                                <image src="../images/6-5.png" class="pic" style="width: {{windowHeight/12}}px; height: {{windowHeight/12}}px" />
                                <view class="desc" style="width: {{(windowWidth-50)-(windowHeight/12)-5}}px; height: {{windowHeight/12}}px"></view>
                            </view>
                            <view class="item">
                                <image src="../images/6-5.png" class="pic" style="width: {{windowHeight/12}}px; height: {{windowHeight/12}}px" />
                                <view class="desc" style="width: {{(windowWidth-50)-(windowHeight/12)-5}}px; height: {{windowHeight/12}}px"></view>
                            </view>
                        </view>
                    </view>
                </view>

                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                    <view class="food">
                        <view class="title">
                            晚餐摄入热量{{dinner}}焦耳
                        </view>
                        <view class="subtitle">
                            选择其一作为晚餐
                        </view>
                        <view class="details">
                            <view class="item">
                                <image src="../images/6-5.png" class="pic" style="width: {{windowHeight/12}}px; height: {{windowHeight/12}}px" />
                                <view class="desc" style="width: {{(windowWidth-50)-(windowHeight/12)-5}}px; height: {{windowHeight/12}}px"></view>
                            </view>
                            <view class="item">
                                <image src="../images/6-5.png" class="pic" style="width: {{windowHeight/12}}px; height: {{windowHeight/12}}px" />
                                <view class="desc" style="width: {{(windowWidth-50)-(windowHeight/12)-5}}px; height: {{windowHeight/12}}px"></view>
                            </view>
                        </view>
                    </view>
				</view>
				
            </view>
        </view>
    </view>

    <view class="tabs" style="height: {{windowHeight/12}}px">
        <view class="tabs_item">
            <image src="../images/ty7.png" style="height: {{atbs_pic_style}}px; width: {{atbs_pic_style}}px"/>
            <text class="tabs_text">客服</text>
        </view>
        <view class="tabs_item">
            <!-- <image src="../images/ty6.png" style="height: {{atbs_pic_style*4}}px; width: {{atbs_pic_style*4}}px;bottom: 0px"/> -->
        </view>
        <view class="tabs_item">
            <image src="../images/ty8.png" style="height: {{atbs_pic_style}}px; width: {{atbs_pic_style}}px"/>
            <text class="tabs_text">合作</text>
        </view>
    </view>

    <view class="share">
        <image src="../images/ty6.png" style="height: {{atbs_pic_style*3}}px; width: {{atbs_pic_style*3}}px"/>
    </view>


</view>


