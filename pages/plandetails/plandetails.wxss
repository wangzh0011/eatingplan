
.plandata{
    position: absolute;
}


.food{
    margin-top: 20px;
}

.title{
    top:0px;
    position: relative;
    text-align: center;
    border: 1px solid #ffffff;
    border-radius: 5px;
    font-size: 30rpx;
    color: #ffffff;
}

.subtitle{
    margin: 10px;
    text-align: center;
    font-size: 26rpx;
    color: #ceffe2;
}

.details{
    position: relative;
    display: flex;
    flex-flow: column wrap; /*纵向排列*/
}

.item{
    display: flex;
    flex-flow: row wrap;/*横向排列*/
    justify-content: flex-start;
}

.pic{
    border-radius: 5px;
    margin-right: 5px;
    margin-bottom: 5px; 
}

.desc{
    border-radius: 5px;
    background-color: #ffffff;
    margin-bottom: 5px;
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
}

.desc_title{
    margin-left: 20px;
    font-size: 30rpx;
    color: #40465f;
}

.desc_subtitle{
    margin-left: 20px;
    font-size: 24rpx;
    color: #9fa1ad;
}

.tabs{
    position: absolute;
    bottom: 0px;
    background-color: #ffffff;
    width: 100%;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    display: flex;
    flex-flow: row wrap;
}

.tabs_item{
    height: 100%;
    width: 33%;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
}

.share{
    width: 33%;
    position: absolute;
    left: 33%;
    bottom: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    padding: 0px 16px;
}

.tabs_text{
    color: #40465f;
    font-size: 28rpx
}


.move-container {
    width: 100%;
    height: 120px;
  }
  
  #mychart-dom-move-bar {
    width: 100%;
    height: 100%;
    margin: 10px 0%;
    display: block;
  }

  button::after {
      border: none
  }

  button{
      background-color: transparent;/*透明*/
      line-height: inherit
  }

  .button-hover{
      color: transparent;
      background-color: transparent
  }