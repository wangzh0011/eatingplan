/*radio默认样式重置*/

checkbox {
    box-sizing: border-box;
    background: none;
    position: relative;
    width: inherit;
    height: inherit;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1
  }
  checkbox text{
    position: relative;
    z-index: 2
  }
  
  checkbox .wx-checkbox-input {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: none;
    border-radius: 6rpx;
    box-sizing: border-box;
    z-index: 1
  }
  
  checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background-color: transparent;
    color: #000;
    border-color: rgb(130, 131, 185);
    background: rgb(130, 131, 185);
    overflow: hidden;
    box-sizing: border-box;
    z-index: inherit
  }
  
  checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    font-size: 30rpx;
    top: auto;
    left: auto;
    right: -4rpx;
    bottom: -4rpx;
    transform: translate(0, 0) scale(1);
    -webkit-transform: translate(0, 0) scale(1);
     z-index: inherit
  }
  
  /*radio默认样式重置*/