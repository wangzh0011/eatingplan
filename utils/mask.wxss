.mask{
    width:100%;
    height:100%;
    position:fixed;
    background:rgba(0,0,0,0.5);
    z-index:999;
    top:0;
    left:0;
}

.fanqie{
    position: absolute;
    background-color: #ffffff;
    width: 80%;
    height: 65%;
    border-radius: 12px;
    top: 10%;
    left: 10%;
}

.fanqie_close{
    position: absolute;
    width: 100%;
    height: 45px; 
    top: 2%;
    display: flex;
    justify-content: center;
}

.fanqie_close_image{
    position: absolute;
    /* top: 8%;
    left: 83%; */
    width: 45px;
    height: 45px; 
}

