.details_mygoods{
    position: absolute;
    background-color: #ffffff;
    border-radius: 3px;
    width: 70%;
    height: 60%;
    top: 20%;
    left: 15%;
    z-index:9999;
}

.goodslist{
    margin: 1% 8% 4% 8%;
    width: 84%;
    height: 70%;
}

.goodsItems{
    width: 100%;
    height: 20%;
    background-color: #F9D690;
    margin-bottom: 5%;
    font-size: 32rpx;
    display: flex;
    justify-content: space-around;
    border-radius: 4px;
}

.goodsItem{
    margin: 3% 0 3% 0;
}

.goods_use_button{
    height: 10%;
    width: 20%;
    background-color: #FFF1C9;
    margin: 3% 0 3% 0;
    display: flex;
    justify-content: center;
}

.line_goods{
    position: absolute;
    bottom: 12%;
    height: 1px;
    width: 100%;
    background-color: #EAEAEB;
}
